{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "dist/src/db/schema"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "dist/src/db"
  ],
  "compileOnSave": true
}
